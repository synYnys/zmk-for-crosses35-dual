#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>

/ {
    chosen { zmk,physical-layout = &gggw_crosses_36_layout; };

    behaviors {
        as: auto_shift {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            tapping_term_ms = <200>;
            quick_tap_ms = <0>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&kp>;
        };
    };

    combos {
        compatible = "zmk,combos";

        esc {
            bindings = <&kp ESCAPE>;
            key-positions = <0 1>;
        };

        Layr {
            bindings = <&mo 4>;
            key-positions = <32 33>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            display-name = "Base";
            bindings = <
&mt ESC Q           &kp L           &kp U                  &kp COMMA           &kp PERIOD                  &kp F        &kp W                   &kp R             &kp Y            &kp P
&mt LEFT_CONTROL E  &mt LEFT_ALT I  &mt LEFT_SHIFT A       &mt LEFT_COMMAND O  &kp MINUS                   &kp K        &mt RIGHT_COMMAND T     &mt LEFT_SHIFT N  &mt RIGHT_ALT S  &mt RIGHT_CONTROL H
&lt 3 Z             &lt 2 X         &lt 1 C                &kp V               &mt LEFT_COMMAND SEMICOLON  &kp G        &kp D                   &kp M             &kp J            &lt 1 B
                                    &mt LEFT_COMMAND CAPS  &mkp LCLK           &lt 1 SPACE                 &lt 2 ENTER  &mt LEFT_ALT BACKSPACE  &mkp RCLK
            >;
        };

        lower_layer {
            display-name = "Lower";
            bindings = <
&kp EQUAL  &kp NUMBER_7                   &kp N8        &kp N9        &kp ESCAPE    &kp RG(P)  &kp RG(W)  &kp RG(R)      &kp RG(Y)  &kp TAB
&kp PLUS   &mt LA(RC(LEFT_ALT)) NUMBER_4  &kp N5        &kp NUMBER_6  &kp TAB       &kp LG(F)  &kp RG(T)  &kp RG(Z)      &kp RG(S)  &kp BACKSPACE
&kp N0     &kp NUMBER_1                   &kp NUMBER_2  &kp NUMBER_3  &kp ASTERISK  &kp RG(C)  &kp RG(V)  &kp RG(LS(V))  &kp RG(X)  &kp DEL
                                          &trans        &trans        &trans        &trans     &trans     &trans
            >;
        };

        raise_layer {
            display-name = "Raise";
            bindings = <
&kp F7               &kp F8           &kp F9             &kp F10              &kp F11        &kp HOME  &kp PAGE_DOWN  &kp UP_ARROW  &kp PAGE_DOWN  &kp END
&mt LEFT_CONTROL F1  &mt LEFT_ALT F2  &mt LEFT_SHIFT F3  &mt LEFT_COMMAND F4  &kp F5         &kp LEFT  &kp DOWN       &kp UP_ARROW  &kp RIGHT      &kp BACKSPACE
&kp F12              &kp F6           &kp LEFT_BRACKET   &kp RIGHT_BRACKET    &kp BACKSLASH  &kp F5    &kp F4         &kp TILDE     &kp SQT        &kp SEMICOLON
                                      &trans             &trans               &trans         &trans    &trans         &trans
            >;
        };

        mouse_layer {
            display-name = "Mouse";
            bindings = <
&kp ESC        &kp LS(LC(TAB))   &kp LC(TAB)                      &kp LA(UP_ARROW)   &kp LA(DOWN)    &kp N7        &kp N8        &kp N9        &kp RG(W)  &kp RG(R)
&kp LG(LA(L))  &kp LG(LA(LEFT))  &mt LEFT_SHIFT LA(LG(UP_ARROW))  &kp LG(LA(RIGHT))  &kp LG(LA(R))   &kp NUMBER_4  &kp N5        &kp NUMBER_6  &kp L      &none
&trans         &kp LG(LS(S))     &kp LS(LA(F))                    &kp LG(S)          &kp LG(LS(N5))  &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &kp N0     &trans
                                 &trans                           &trans             &trans          &trans        &trans        &trans
            >;
        };

        layer_4 {
            bindings = <
&trans  &trans  &trans  &trans       &trans  &bt BT_SEL 4  &bt BT_SEL 3  &bt BT_SEL 2  &bt BT_SEL 1  &bt BT_SEL 0
&trans  &trans  &trans  &bootloader  &trans  &trans        &bootloader   &trans        &trans        &bt BT_CLR
&trans  &trans  &trans  &trans       &trans  &trans        &trans        &trans        &trans        &trans
                &trans  &bootloader  &trans  &trans        &bootloader   &trans
            >;
        };
    };
};
