/* config/crosses_left.overlay */

&spi1 {
    trackball_peripheral@0 {
        /* CPIは標準的な値に戻す */
        cpi = <600>;
        
        /* 縦も横も反転させる */
        y-invert;
        x-invert;
    };
};

/* 入力の設定を上書きして、速度を1/4に落とす */
&trackball_peripheral_split {
    /* 解像度を4で割る（減速）設定 */
    resolution-divisor = <4>;
};
